                <script>
                    function updateOrderTable(items) {
                        const tableContainer = document.querySelector('.table-container');
                        const table = document.createElement('ul');
                        table.classList.add('responsive-table');

                        // Create table header
                        const tableHeader = document.createElement('li');
                        tableHeader.classList.add('table-header');
                        tableHeader.innerHTML = `
                        <div class="col col-2">Product Name</div>
                        <div class="col col-3">Price</div>
                        <div class="col col-4">Amount</div>
                        <div class="col col-5" data-label="Total Price">Total</div>
                    `;
                        table.appendChild(tableHeader);

                        // Add table rows for each item
                        let total = 0;
                        items.forEach(item => {
                            const tableRow = document.createElement('li');
                            tableRow.classList.add('table-row');
                            tableRow.innerHTML = `
                            <div class="col col-2" data-label="Product Name">${item.name}</div>
                            <div class="col col-3" data-label="Price">${item.price} $</div>
                            <div class="col col-4" data-label="Amount">${item.quantity}</div>
                            <div class="col col-5" data-label="Total Price">${(item.price * item.quantity).toFixed(2)} $</div>
                        `;
                            table.appendChild(tableRow);

                            total += item.price * item.quantity;
                        });

                        // Add the total row
                        if (items.length > 0) {
                            const totalRow = document.createElement('li');
                            totalRow.classList.add('table-row-total');
                            totalRow.innerHTML = `
                            <div class="col col-2" data-label="Product Name"></div>
                            <div class="col col-3" data-label="Price"></div>
                            <div class="col col-4" data-label="Amount"></div>
                            <div class="col col-total" data-label="Total Price">Total: ${total.toFixed(2)} $</div>
                        `;
                            table.appendChild(totalRow);
                        }

                        // Replace the existing table with the updated one
                        tableContainer.innerHTML = '';
                        tableContainer.appendChild(table);
                    }

                    function redirectToHistory() {
                        window.location.href = "/transaction_history"; // Replace "/history" with the actual URL of your transaction history page
                    }

                    const checkoutButton = document.querySelector('.checkout-button');
                    const cardContainer = document.getElementById('card-container');
                    const dismissButton = document.querySelector('.dismiss');

                    checkoutButton.addEventListener('click', () => {
                        cardContainer.classList.remove('hidden');
                    });

                    dismissButton.addEventListener('click', () => {
                        cardContainer.classList.add('hidden');
                    });

                    const username = "<% username %>";
                    // Example data for the shopping cart
                    const items = getCookieValue(`order_${username}`);
                    console.log('check');

                    updateOrderTable(items);
                </script>
                <script>
                    document.addEventListener('DOMContentLoaded', () => {
                        // Declare and assign the username variable
                        const username = " <% username %>"; // Replace <your_username> with the actual username or assign it dynamically

                        // Retrieve the items data from the cookie
                        const items = getCookieValue(`order_${username}`);
                        console.log('hey');
                        // Call the updateOrderTable() function with the items data
                        updateOrderTable(items);
                    });
                </script>
